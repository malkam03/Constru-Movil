<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.construmovil.construmovil.home.HomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <Button
            android:text="Registro Clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_button_clients" />

        <Button
            android:text="Registro Proveedores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_button_suppliers" />

        <Button
            android:text="Registro Vendedores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_button_sellers" />

        <Button
            android:text="Registro Categoría"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_button_categories" />

        <Button
            android:text="Registro Productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_button_products" />

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_button_orders" />

        <Button
            android:text="Sincronización"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_button_synch" />
    </LinearLayout>
</RelativeLayout>
