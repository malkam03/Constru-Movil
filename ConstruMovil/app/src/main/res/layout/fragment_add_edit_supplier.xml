<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".supplier.AddEditSupplierActivity">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Empresa"
            android:inputType="text"
            tools:text="Empresa" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_ced_jur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_ced_jur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cédula Jurídica"
            android:inputType="number"
            tools:text="Cédula Jurídica" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_ced_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_ced_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cédula del Representante"
                android:inputType="number"
                tools:text="Cédula del Representante" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>